<div class="jumbotron">
  <h1>Sign Up Confirmation</h1>
  <p>Are you sure these values are correct?</p>
  <p>Email: <%= @user.email %>
  </p>
  <p>
    Name: <%= @user.name %>
  </p>
  <%= @user.password %>
  <%= @user.password_confirmation %>
  <p>
    <%= button_to "Yes", {controller: 'users', action: 'create', params: {user:{name:@user.name,email:@user.email,password:@user.password,password_confirmation:@user.password_confirmation}}}, class: 'btn btn-success' %>
    <%= button_to "No", { controller: 'users', action: 'new' }, class: 'btn btn-failure', :method => :get %>
  </p>
</div>
